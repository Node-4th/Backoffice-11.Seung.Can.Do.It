<body>
    <%- include('header.ejs') %>

        <form class="form-box" action="/users/sign-up" method="POST" enctype="multipart/form-data">
            <div class="sign-in">
                <div class="profileImage">
                    프로필 사진
                    <input class="profileImage_input" type="file" name="profileImage" accept="image/*" />
                </div>
                <div class="email">
                    이메일
                    <input class="email_input" type="email" name="email" placeholder="이메일을 입력하세요" />
                </div>
                <div class="password">
                    비밀번호
                    <input class="password_input" type="password" name="password" placeholder="비밀번호를 입력하세요" />
                </div>
                <div class="passwordConfirm">
                    비밀번호 확인
                    <input class="passwordConfirm_input" type="password" name="passwordConfirm"
                        placeholder="비밀번호 확인을 입력하세요" />
                </div>
                <div class="name">
                    이름
                    <input class="name_input" type="text" name="name" placeholder="이름을 입력하세요" />
                </div>
                <button class="sign-btn" type="submit">회원가입하기</button>
            </div>
        </form>
</body>